<configuration>
    <logger name="com.xtract" level="INFO" />
    <logger name="httpclient" level="WARN" /> 
 
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
        <pattern>%green(%d) %highlight(%-5level) %cyan(%class.%method) %yellow([%t]) %msg%n</pattern>
    </encoder>
   </appender>
    
    <!-- LOG everything at INFO level -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
